<%= render 'design' %>
<head>
    <link href="https://fonts.googleapis.com/css?family=Press+Start+2P" rel="stylesheet">
</head>
  <h1 id = "listing">Listing posts</h1>



<%= link_to 'New post', new_post_path %>
<!--<%= button_to "New post", new_post_path, :class => "button", :method => :get, id: 'button' %>-->
<div class = tableContainer>
<table id = "gamePost">
  <tr>
    <th>Title</th>
    <th>User</th>
    <th>Game Title</th>
    <th>Text</th>
  </tr>
 
  <% @posts.each do |post| %>
    <tr>
      
      <td id = "tableCell"><%= link_to post.title, post_path(post) %></td>
      <td id = "tableCell"><%= post.poster_name %></td>
      <td id = "tableCell"><%= post.title_of_the_game %></td>
      <td id = "tableCell"><%= link_to post.text, post_path(post) %></td>
    </tr>
  <% end %>
</table>
</div>